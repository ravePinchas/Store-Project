                <div class="section-title">
                    <h2>contact us<span>.</span></h2>
                </div>

                <div class="contact-inner">
                    <form class="form">
                        <% if (typeof(user) == "undefined") { %>
                            <div class="form-field">
                                <label>Name</label>
                                <input class="form-input" id="name" type="text" placeholder="Enter your name" required="required" />
                            </div>
                            <div class="form-field">
                                <label>Email Address</label>
                                <input class="form-input" id="email" type="email" placeholder="Enter your email" required="required" />
                            </div>
                            <% } else { %>
                                <div class="form-field">
                                    <p>Hello <b style="text-transform: capitalize;"><%=user.firstName %> <%=user.lastName %></b>, send us a message right now.</p>
                                    <br>
                                </div>

                                <input type="hidden" hidden id="name" type="text" value="<%=user.firstName %> <%=user.lastName %>" />
                                <input type="hidden" hidden id="email" type="email" value="<%=user.email %>" />
                                <% } %>
                                    <div class="form-field">
                                        <label>Phone Number</label>
                                        <input class="form-input" id="phone" type="tel" placeholder="Enter your phone" required="required" />
                                    </div>
                                    <div class="form-field">
                                        <label>Message</label>
                                        <textarea class="form-input" id="message" rows="5" placeholder="Enter your message" required="required"></textarea>
                                    </div>
                                    <div class="form-submit">
                                        <button class="btn btn-block btn-primary" type="submit">Send Message <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                                    </div>
                    </form>
                </div>
            </div>
